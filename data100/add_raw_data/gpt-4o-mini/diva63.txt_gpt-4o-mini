   - "som" → "koncept": distance = 1
   - "kan" → "ersätta/komplettera": distance = 1
   - "ersätta/komplettera" → "som": distance = 3
   - "dagens" → "bärbara": distance = 1
   - "bärbara" → "stege": distance = 1
